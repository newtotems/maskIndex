<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title or metadata.title }}</title>
    <meta name="description" content="{{ description or metadata.description }}">
    <link rel="stylesheet" href="{{ '/css/index.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/bootstrap.css' | url }}">
    <link rel="stylesheet" href="{{ '/css/flexboxgrid.css' | url }}">
    <link rel="alternate" href="{{ metadata.feed.path | url }}" type="application/atom+xml" title="{{ metadata.title }}">
    <link rel="alternate" href="{{ metadata.jsonfeed.path | url }}" type="application/json" title="{{ metadata.title }}">
  </head>
  <body>
  <div class="container">
    <div class="text-center mt-3">

      <h1 class=""><a href="{{ '/' | url }}">{{ metadata.title }}</a></h1>
      {% for p in products %}
      {% if loop.last%}
        <div class="alert alert-light">
        Collecting the world's sheet masks - Explore our collection of {{loop.length}} Sheet Masks</div>
      {% endif %}
      {% endfor %}
    </div>
    </div>

    <main{% if templateClass %} class="{{ templateClass }}"{% endif %}>

      {{ content | safe }}
    </main>

    <footer></footer>

  </body>
</html>
