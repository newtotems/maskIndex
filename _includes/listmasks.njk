{% for row in masks | reverse | batch(6, '') %}
<div class="product__row row {% if loop.index >= 3 %}hide-mobile{% endif %}">
{% for item in row %}
{% if item %}
<div class="col-4 col-xl-2 p-0 m-0">
  <div class="product">

  <div>
  <small>
    <a href="/sheet-masks/{{item.brand|slug|replace("'","")}}/">
    <img src="/img/logos/{{item.brand|slug|replace("'","")}}.png" class="product__logo" alt="{{item.brand}}" title="{{item.brand}}">
    </a>
  </small>
  </div>

  <div class="text-center product__set">  
  <a href="/sheet-masks/{{item.brand|slug|replace("'","")}}/{{item.set|slug|replace("'","")}}">
    {{item.set}}
  </a>
</div>

<div class="text-center product__name">  
    {{item.name}}
</div>

<div class="product__image">
   {% if item.link|length >0 and item.linkprovider %} 
 <a href="{{item.link}}" class="" target="_blank">
   {%endif%}

<img src="/img/masks/{{item.brand|slug|replace("'","")}}/{{item.set|slug|replace("'","")}}/{{item.name|slug|replace("'","")}}.png" class="img-fluid product__product-image" alt="{{item.brand}} {{item.set}} {{item.name}}" title="{{item.brand}} {{item.set}} {{item.name}}">
{% if item.link|length >0 and item.linkprovider %} </a>{%endif%}
</div>

<div class="product__desc"></div>
<div class="row">

<div class="col-xs-12 text-center">
 {% if item.link|length >0 and item.linkprovider %} 
 <a href="{{item.link}}" class="btn btn-primary product__buy-btn" target="_blank">
   Buy
   <span class="product__linkprovider">on {{item.linkprovider}}</span>
   </a>
 {% else %}
 {% endif %}
</div>

</div>
</div>
  </div>
  {% endif %}
{% endfor %}
</div>
{% endfor %}
