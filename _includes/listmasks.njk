{% for row in masks | reverse | batch(6, '') %}
<div class="row {% if loop.index >= 3 %}hide-mobile{% endif %}">
{% for item in row %}
{% if item %}
<div class="product col-4 col-xl-2">

  <div>
  <small>
    <a href="/sheet-masks/{{item.brand|slug}}/">
    <img src="/img/logos/{{item.brand|slug}}.png" class="img-fluid" alt="{{item.brand}}" title="{{item.brand}}">
    </a>
  </small>
  </div>

  <div class="text-center product__set">  
  <a href="/sheet-masks/{{item.brand|slug}}/{{item.set|slug}}">
    {{item.set}}
  </a>
</div>

<div class="product__image">
<a href="/sheet-masks/{{item.brand|slug}}/{{item.set|slug}}/{{item.name|slug}}">
<img src="/img/masks/{{item.brand|slug}}/{{item.set|slug}}/{{item.name|slug}}.png" class="img-fluid" style="max-height:225px;display:block;margin:0 auto">
</a>
</div>

<div class="product__desc">

<div class="text-center product__name">  
  <a href="/sheet-masks/{{item.brand|slug}}/{{item.set|slug}}/{{item.name|slug}}">
    {{item.name}}
  </a>
</div>
</div>
<div class="row">

<div class="col-xs-12 text-center">
 {% if item.link %}
 <a href="{{item.link}}" class="btn btn-primary" target="_blank">
 Buy</a>
 {% else %}{% endif %}
</div>

</div>
  </div>
  {% endif %}
{% endfor %}
</div>
{% endfor %}
